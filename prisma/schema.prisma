generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(cuid())
  name        String
  slug        String
  description String
  price       Int
  image       String     @default("")
  category    Category[]
}

model Category {
  id      String    @id @default(cuid())
  name    String
  slug    String
  product Product[]
}

