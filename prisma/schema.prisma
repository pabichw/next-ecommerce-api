generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                     String       @id @default(cuid())
  name                   String
  slug                   String
  description            String
  price                  Int
  image                  String       @default("")
  configurableAttributes String       @default("")
  category               Category[]
  collection             Collection[]
  relatedProduct         Product[]    @relation("relatedProduct")
  relatedProductRelation Product[]    @relation("relatedProduct")
  reviews                Review[]
}

model Category {
  id      String    @id @default(cuid())
  name    String
  slug    String
  product Product[]
}

model Collection {
  id      String    @id @default(cuid())
  name    String
  product Product[]
}

model Review {
  id        String   @id @default(cuid())
  headline  String
  content   String
  rating    Int
  name      String
  email     String
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

